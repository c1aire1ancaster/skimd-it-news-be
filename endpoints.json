{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },

  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },

  "POST /api/topics": {
    "description": "serves an object of a posted topic",
    "queries": ["author", "topic", "sort_by", "order"],
    "send body": ["slug", "description"],
    "exampleResponse": {
      "topics": { "slug": "football", "description": "Footie!" }
    }
  },

  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "butter_bridge",
          "name": "jonny",
          "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
        }
      ]
    }
  },

  "GET /api/users/:username": {
    "description": "serves an object of a specifically requested user",
    "queries": [],
    "params": ["username"],
    "exampleResponse": {
      "users": {
        "username": "butter_bridge",
        "name": "jonny",
        "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
      }
    }
  },

  "GET /api/articles": {
    "description": "serves an array of articles",
    "queries": ["topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": 1594329060000,
          "votes": 100,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 11
        },
        {
          "article_id": 2,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 15
        }
      ]
    }
  },

  "POST /api/articles": {
    "description": "serves an object of a posted article",
    "queries": [],
    "send body": ["author", "title", "body", "topic", "article_img_url"],
    "exampleResponse": {
      "articles": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": 1527695953341,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
        "comment_count": 15
      }
    }
  },

  "GET /api/articles/:article_id": {
    "description": "serves an object of a specifically requested article",
    "queries": [],
    "params": ["article_id"],
    "exampleResponse": {
      "articles": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": 1527695953341,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
        "comment_count": 15
      }
    }
  },

  "PATCH /api/articles/:article_id": {
    "description": "serves an object of a specifically requested article with the vote property updated",
    "queries": [],
    "params": ["article_id"],
    "send body": ["inc_votes"],
    "exampleResponse": {
      "updatedArticle": {
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": 1594329060000,
        "votes": 105,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
        "comment_count": 11
      }
    }
  },

  "DELETE /api/articles/:article_id": {
    "description": "deletes the specifically requested article and all the comments that are associated with that article (article_id)",
    "queries": [],
    "params": ["article_id"]
  },

  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for a specifically requested article",
    "queries": [],
    "params": ["article_id"],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "body": "Replacing the quiet elegance of the dark suit and tie with the casual indifference of these muted earth tones is a form of fashion suicide, but, uh, call me crazy — onyou it works.",
          "votes": 100,
          "author": "icellusedkars",
          "article_id": 1,
          "created_at": 1583025180000
        },
        {
          "comment_id": 5,
          "body": " I carry a log — yes. Is it funny to you? It is not to me.",
          "votes": -100,
          "author": "icellusedkars",
          "article_id": 1,
          "created_at": 1582459260000
        }
      ]
    }
  },

  "POST /api/articles/:article_id/comments": {
    "description": "serves an object of a posted comment",
    "queries": ["author", "topic", "sort_by", "order"],
    "params": ["article_id"],
    "send body": ["author", "body"],
    "exampleResponse": {
      "comment": {
        "comment_id": 25,
        "body": "I hate streaming eyes even more",
        "votes": 0,
        "author": "icellusedkars",
        "article_id": 1,
        "created_at": 1586642520000
      }
    }
  },

  "DELETE /api/comments/:comment_id": {
    "description": "deletes the specifically requested comment",
    "queries": [],
    "params": ["comment_id"]
  },

  "PATCH /api/comments/:comment_id": {
    "description": "serves an object of a specifically requested comment with the vote property updated",
    "queries": [],
    "params": ["comment_id"],
    "send body": ["inc_votes"],
    "exampleResponse": {
      "updatedComment": {
        "comment": {
          "comment_id": 25,
          "body": "I hate streaming eyes even more",
          "votes": 1,
          "author": "icellusedkars",
          "article_id": 1,
          "created_at": 1586642520000
        }
      }
    }
  }
}
